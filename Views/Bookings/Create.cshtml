@model Reservation.Models.BookingViewModel

@{
    ViewData["Title"] = "Create Booking";
}

<h1>Create New Booking</h1>

<form asp-action="Create">
    <div class="row">
        <div class="col-md-6">
            <div class="form-group">
                <label asp-for="BookingDate" class="control-label"></label>
                <input asp-for="BookingDate" type="date" class="form-control" />
                <span asp-validation-for="BookingDate" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="BookingTime" class="control-label"></label>
                <input asp-for="BookingTime" type="time" class="form-control" />
                <span asp-validation-for="BookingTime" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="CustomerCount" class="control-label"></label>
                <input asp-for="CustomerCount" class="form-control" />
                <span asp-validation-for="CustomerCount" class="text-danger"></span>
            </div>
        </div>

        <div class="col-md-6">
            <div class="form-group">
                <label asp-for="CustomerName" class="control-label"></label>
                <input asp-for="CustomerName" class="form-control" />
                <span asp-validation-for="CustomerName" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="CustomerPhoneNo" class="control-label"></label>
                <input asp-for="CustomerPhoneNo" class="form-control" />
                <span asp-validation-for="CustomerPhoneNo" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="TableId" class="control-label">Table</label>
                <select asp-for="TableId" class="form-control" asp-items="ViewBag.TableList">
                    <option value="">-- Select Table --</option>
                </select>
                <span asp-validation-for="TableId" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="StaffId" class="control-label">Staff Member</label>
                <select asp-for="StaffId" class="form-control" asp-items="ViewBag.StaffList">
                    <option value="">-- Select Staff --</option>
                </select>
                <span asp-validation-for="StaffId" class="text-danger"></span>
            </div>
        </div>
    </div>

    <div class="form-group mt-3">
        <input type="submit" value="Create Booking" class="btn btn-primary" />
        <a asp-action="Index" class="btn btn-secondary">Cancel</a>
    </div>
</form>
