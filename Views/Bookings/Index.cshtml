@model IEnumerable<Reservation.Models.BookingViewModel>

<h1>Bookings</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<form asp-controller="Bookings" asp-action="Index" method="get">
    <p>
        Enter name:<input type="text" name="SearchString"/>
        <input type="submit" value="Search"/>
    </p>
</form>

<table class="table">
    <thead>
        <tr>
            <th>Customer Name</th>
            <th>Phone</th>
            <th>Number of Customers</th>
            <th>Table</th>
            <th>Staff</th>
            <th>Date</th>
            <th>Time</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var booking in Model)
        {
            <tr>
                <td>@booking.CustomerName</td>
                <td>@booking.CustomerPhoneNo</td>
                <td>@booking.CustomerCount</td>
                <td>@booking.Table.TableNumber</td>
                <td>@booking.Staff.StaffName</td>
                <td>@booking.BookingDate.ToShortDateString()</td>
                <td>@booking.BookingTime.ToShortTimeString()</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@booking.Id">Edit</a> |
                    <a asp-action="Details" asp-route-id="@booking.Id">Details</a> |
                    <a asp-action="Delete" asp-route-id="@booking.Id">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>

<div class="modal fade" id="dayModal" tabindex="-1" aria-hidden="true">
    <div class="modal-dialog modal-lg modal-dialog-centered">
        <div class="modal-content"></div>
    </div>
</div>
