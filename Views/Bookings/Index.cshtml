@model IEnumerable<Reservation.Models.BookingViewModel>

@{
    ViewData["Title"] = "Bookings";
}

<h1>Bookings</h1>

<div class="mb-3">
    <a asp-action="Index" asp-route-sortOrder="name_asc" class="btn btn-primary btn-sm me-1">A → Z</a>
    <a asp-action="Index" asp-route-sortOrder="name_desc" class="btn btn-primary btn-sm me-1">Z → A</a>
    <a asp-action="Index" class="btn btn-secondary btn-sm">Sort by Date</a>
</div>

<table class="table">
    <thead>
        <tr>
            <th>Customer Name</th>
            <th>Phone</th>
            <th>Number of Customers</th>
            <th>Table</th>
            <th>Staff</th>
            <th>Date</th>
            <th>Time</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var booking in Model)
        {
            <tr>
                <td>@booking.CustomerName</td>
                <td>@booking.CustomerPhoneNo</td>
                <td>@booking.CustomerCount</td>
                <td>@(booking.Table?.TableNumber.ToString() ?? "—")</td>
                <td>@(booking.Staff?.StaffName ?? "—")</td>
                <td>@booking.BookingDate.ToShortDateString()</td>
                <td>@booking.BookingTime.ToShortTimeString()</td>
            </tr>
        }
    </tbody>
</table>

<!-- single modal placeholder used by calendar/day layout -->
<div class="modal fade" id="dayModal" tabindex="-1" aria-hidden="true">
    <div class="modal-dialog modal-lg modal-dialog-centered">
        <div class="modal-content"></div>
    </div>
</div>
