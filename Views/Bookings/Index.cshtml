@model IEnumerable<Reservation.Models.BookingViewModel>

@{
    ViewData["Title"] = "Bookings";
    var currentSort = ViewData["CurrentSort"] as string;
    var currentFilter = ViewData["CurrentFilter"] as string;
}

<h1>Bookings</h1>

<p>
    <a asp-action="Create" class="btn btn-primary">Create New</a>
</p>

<!-- Search form -->
<form asp-controller="Bookings" asp-action="Index" method="get" class="form-inline mb-3">
    <div class="form-group">
        <label for="searchString" class="sr-only">Enter name:</label>
        <input type="text" id="searchString" name="searchString"
               value="@(currentFilter ?? "")"
               class="form-control mr-2"
               placeholder="Enter name" />
        <input type="hidden" name="sortOrder" value="@(currentSort ?? "")" />
        <input type="submit" value="Search" class="btn btn-secondary" />
    </div>
</form>

<!-- Sorting buttons -->
<div class="mb-2">
    <a asp-action="Index"
       asp-route-sortOrder="name_asc"
       asp-route-searchString="@(currentFilter ?? "")"
       class="btn btn-sm btn-outline-primary">A → Z</a>

    <a asp-action="Index"
       asp-route-sortOrder="name_desc"
       asp-route-searchString="@(currentFilter ?? "")"
       class="btn btn-sm btn-outline-primary">Z → A</a>

    <a asp-action="Index"
       asp-route-sortOrder=""
       asp-route-searchString="@(currentFilter ?? "")"
       class="btn btn-sm btn-outline-secondary">Sort by Date</a>
</div>

<!-- Bookings table -->
<table class="table table-striped">
    <thead>
        <tr>
            <th>Customer Name</th>
            <th>Phone</th>
            <th>Number of Customers</th>
            <th>Table</th>
            <th>Staff</th>
            <th>Date</th>
            <th>Time</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @if (Model != null && Model.Any())
        {
            foreach (var booking in Model)
            {
                <tr>
                    <td>@booking.CustomerName</td>
                    <td>@booking.CustomerPhoneNo</td>
                    <td>@booking.CustomerCount</td>
                    <td>@(booking.Table?.TableNumber.ToString() ?? "—")</td>
                    <td>@(booking.Staff?.StaffName ?? "—")</td>
                    <td>@booking.BookingDate.ToShortDateString()</td>
                    <td>@booking.BookingTime.ToShortTimeString()</td>
                    <td>
                        <a asp-action="Edit" asp-route-id="@booking.Id">Edit</a> |
                        <a asp-action="Details" asp-route-id="@booking.Id">Details</a> |
                        <a asp-action="Delete" asp-route-id="@booking.Id">Delete</a>
                    </td>
                </tr>
            }
        }
        else
        {
            <tr>
                <td colspan="8" class="text-center">No bookings found.</td>
            </tr>
        }
    </tbody>
</table>

<!-- Modal placeholder -->
<div class="modal fade" id="dayModal" tabindex="-1" aria-hidden="true">
    <div class="modal-dialog modal-lg modal-dialog-centered">
        <div class="modal-content"></div>
    </div>
</div>
