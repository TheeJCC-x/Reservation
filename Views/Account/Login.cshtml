@model Reservation.Models.LoginViewModel
@{
    ViewData["Title"] = "Login";
    string returnUrl = ViewData["ReturnUrl"] as string;
}

<body class="login-page">
    <div class="login-container">
        <h2 class="login-title">Login</h2>

        <form asp-action="Login" method="post" asp-controller="Account">
            @Html.AntiForgeryToken()
            <input type="hidden" name="returnUrl" value="@returnUrl" />

            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="input-group">
                <i class="fa fa-user"></i>
                <input asp-for="Username" class="form-control" placeholder="Username" />
                <span asp-validation-for="Username" class="text-danger"></span>
            </div>

            <div class="input-group">
                <i class="fa fa-lock"></i>
                <!-- This will hide the password as dots -->
                <input asp-for="Password" class="form-control" type="password" placeholder="Password" />
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>

            <div class="form-check">
                <input asp-for="RememberMe" class="form-check-input" />
                <label asp-for="RememberMe" class="form-check-label"></label>
            </div>

            <button type="submit" class="login-btn">Login</button>
        </form>
    </div>
</body>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}

